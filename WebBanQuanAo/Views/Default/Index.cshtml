
@{
    Layout = "~/Views/Shared/_LayoutNguoidung.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Trang Chủ</title>
</head>
<body>
    <div>


            <div class="demo-1">
                <div id="example1" class="core-slider core-slider__carousel example_1">
                    <div class="core-slider_viewport">
                        <div class="core-slider_list">
                            <div class="core-slider_item">
                                <img src="~/Content/images/b1.jpg" class="img-responsive" alt="">
                            </div>
                            <div class="core-slider_item">
                                    <img src="~/Content/images/b2.jpg" class="img-responsive" alt="">
                                </div>
                                <div class="core-slider_item">
                                    <img src="~/Content/images/b3.jpg" class="img-responsive" alt="">
                                </div>
                                <div class="core-slider_item">
                                    <img src="~/Content/images/b4.jpg" class="img-responsive" alt="">
                                </div>
                        </div>
                    </div>
                    <div class="core-slider_nav">
                        <div class="core-slider_arrow core-slider_arrow__right"></div>
                        <div class="core-slider_arrow core-slider_arrow__left"></div>
                    </div>
                    <div class="core-slider_control-nav"></div>
                </div>
            </div>
            <link href="~/Content/css/coreSlider.css" rel="stylesheet" type="text/css">
            <script src="~/Content/js/coreSlider.js"></script>
            <script>
                $('#example1').coreSlider({
                    pauseOnHover: false,
                    interval: 3000,
                    controlNavEnabled: true
                });

            </script>


        
    </div>



    <p style="font-size:40px;margin-left:30px;">@Html.ActionLink("Quần Áo Nam", "index", "QuanAoNam")</p>
    <div style="margin-left:40px;">
        @{Html.RenderAction("QuanAoNam", "QuanAoNam"); }
        <div class="clear"></div>
    </div>
    <p style="font-size:40px;margin-left:30px;">@Html.ActionLink("Quần Áo Nữ", "index", "QuanAoNu")</p>
    <div style="margin-left:40px;">
        @{Html.RenderAction("QuanAoNu", "QuanAoNu"); }
        <div class="clear"></div>
    </div>
</body>
</html>